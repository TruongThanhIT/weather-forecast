<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="weatherInfo"
            type="com.thanht.weather.model.WeatherInfo" />
    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_tiny"
        android:paddingVertical="@dimen/padding_tiny"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/textColor"
        app:weather="@{weatherInfo}"
        tools:text="Thanh Truong" />
</layout>